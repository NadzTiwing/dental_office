{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "declaration": true,           // Optional: Generate .d.ts files
    "sourceMap": true              // Optional: For debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}